  </div>

  <!-- Blogger JSON API Fetch Logic -->
  <script>
    async function loadPosts(label, btn) {
      // Button toggle active state
      document.querySelectorAll('.category-button').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      // Show skeletons instantly
      const container = document.getElementById('cardContainer');
      container.innerHTML = '';
      for (let i = 0; i < 8; i++) {
        container.innerHTML += `
          <div class="skeleton-card">
            <div class="skeleton-box"></div>
            <div class="skeleton-text"></div>
          </div>`;
      }

      let postsHTML = '';
      let start = 1;
      let totalFetched = 0;
      const maxResults = 150;

      while (true) {
        const url = `https://jinendra-vani.blogspot.com/feeds/posts/default/-/${label}?alt=json&start-index=${start}&max-results=50`;
        try {
          const res = await fetch(url);
          const data = await res.json();
          const entries = data.feed.entry || [];

          for (let entry of entries) {
            const title = entry.title.$t;
            const link = entry.link.find(l => l.rel === 'alternate').href;
            const mediaThumbnail = (entry.media$thumbnail && entry.media$thumbnail.url) || 'https://via.placeholder.com/70x70?text=?';
            postsHTML += `
              <div class="card">
                <a class="card-link" href="${link}">
                  <div class="card-icon">
                    <img alt="${title}" src="${mediaThumbnail}">
                  </div>
                  <h2>${title}</h2>
                </a>
              </div>`;
          }

          totalFetched += entries.length;
          if (entries.length < 50 || totalFetched >= maxResults) break;
          start += 50;

        } catch (e) {
          break;
        }
      }

      container.innerHTML = postsHTML || `<p style="text-align:center;margin-top:30px;color:#555;">No posts found for "${label}".</p>`;
    }

    // Load default label on page load
    window.addEventListener('DOMContentLoaded', () => {
      loadPosts('Chalisa', document.querySelector('.category-button.active'));
    });
  </script>

</body>
